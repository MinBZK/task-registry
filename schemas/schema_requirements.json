{
  "$id": "http://example.com/schemas/schema_v1.1.0.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "systemcard_path": {
      "type": "string"
    },
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "const": "1.1.0"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "explanation": {
      "type": "string"
    },
    "urn": {
      "type": "string",
      "pattern": "^urn:nl:ak:ver:[a-z]+-[0-9]+"
    },
    "language": {
      "type": "string",
      "pattern": "^[a-z]{2}(-[A-Z]{2})?$"
    },
    "owners": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "organization": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "role": {
            "type": "string"
          }
        },
        "required": [
          "organization",
          "name",
          "email",
          "role"
        ]
      }
    },
    "date": {
      "type": "string"
    },
    "url": {
      "type": "string"
    },
    "subject": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "lifecycle": {
      "description": "Part of the algorithm lifecycle",
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "probleemanalyse",
          "ontwerp",
          "dataverkenning-en-datapreparatie",
          "ontwikkelen",
          "organisatieverantwoordelijkheden",
          "verificatie-en-validatie",
          "implementatie",
          "monitoring-en-beheer",
          "uitfaseren"
        ]
      }
    },
    "suggested_roles": {
      "description": "Roles suggested to answer questions",
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "aanbestedingsjurist",
          "aanbieder",
          "archiefdeskundige",
          "behoeftesteller",
          "communicatieadviseur",
          "contractbeheerder",
          "data engineer",
          "data scientist",
          "domeinspecialist",
          "ethicus",
          "gebruiker",
          "gebruiksverantwoordelijke",
          "gemandateerd verantwoordelijke(n)",
          "informatie analist",
          "informatiebeheerder",
          "inkoopadviseur",
          "jurist",
          "opdrachtgever",
          "opdrachtnemer",
          "privacy-officer",
          "proceseigenaar",
          "projectleider",
          "security officer"
      ]
      }
    },
    "links": {
      "description": "Links to other relevant measures / tasks",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ai_act_profile": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "AI-systeem",
                "AI-systeem voor algemene doeleinden",
                "AI-model voor algemene doeleinden",
                "geen algoritme",
                "impactvol algoritme",
                "niet-impactvol algoritme"
              ]
            }
          },
          "open_source": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "open-source",
                "geen open-source"
              ]
            }
          },
          "risk_group": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "hoog-risico",
                "geen hoog-risico",
                "verboden",
                "uitzondering van toepassing"
              ]
            }
          },
          "systemic_risk": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "systeemrisico",
                "geen systeemrisico"
              ]
            }
          },
          "transparency_obligations": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "transparantieverplichting",
                "geen transparantieverplichting"
              ]
            }
          },
          "role": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "aanbieder",
                "gebruiksverantwoordelijke",
                "importeur",
                "distributeur"
              ]
            }
          },
          "conformity_assessment_body": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "beoordeling door derde partij"
              ]
            }
          }
        },
        "required": [
          "type",
          "risk_group",
          "role"
        ]
      }
    },
    "always_applicable":{
      "description": "1 if requirements applies to every system, 0 if only for specific systems",
      "type": "integer"
    },
    "template": {
      "type": "object",
      "additionalProperties": {
        "type": "string",
        "pattern": "^\\$.*$"
      },
      "properties": {
        "requirement": {
          "type": "string"
        },
        "remarks": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "authors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "const": "$AUTHOR.NAME"
              },
              "email": {
                "type": "string",
                "const": "$AUTHOR.EMAIL"
              },
              "role": {
                "type": "string",
                "const": "$AUTHOR.ROLE"
              }
            },
            "required": [
              "name",
              "email",
              "role"
            ]
          }
        }
      }
    }
  },
  "required": [
    "systemcard_path",
    "schema_version",
    "name",
    "description",
    "urn",
    "language",
    "owners",
    "date",
    "url",
    "subject",
    "lifecycle",
    "links",
    "ai_act_profile",
    "always_applicable",
    "template"
  ]
}
